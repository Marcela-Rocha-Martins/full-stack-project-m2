<html>
  <head>
    <title>Job View</title>
    <link rel="stylesheet" href="/public/stylesheets/jobview.css" />
    <link rel="stylesheet" href="/public/stylesheets/layout.css" />
  </head>
  <body>
    {{#each dbJobs}}
      <div class="container">
        <div class="column1">
          <div class="content">
            <h1 class="job-title">Company Name: {{companyName}}</h1>
            <h2 class="position">Job Title: {{jobTitle}}</h2>

          </div>
        </div>

        <div class="column2">
          <div class="content">
            <p class="description">Date Applied: {{dateApplied}}</p>
            <p class="description">Location: {{jobCountry}}, {{jobCity}}</p>
          </div>
        </div>

        <div class="column3">
          <div class="content">
            <p class="files">Comments: {{jobApplicationDescription}}</p>
            <p class="notes">Files: {{jobFiles}}</p>
          </div>
        </div>
      </div>
      <button>Edit</button>
      <form action="/jobs/{{_id}}/delete" method="post">
        <button>Delete</button>
      </form>
    {{/each}}
  </body>
</html>